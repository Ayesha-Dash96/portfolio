---
interface Props {
  title: string;
  href?: string;
  class?: string;
  items?: Array<{
    text?: string;
    href?: string;
    platform?: string;
    url?: string;
    icon?: string;
  }>;
}

import { SITE_CONFIG } from "@config";

const { title, href, class: className } = Astro.props;
---

<section class={`mb-10 ${className || ""}`.trim()}>
  <h2 id={href} class="mb-4 text-xl font-semibold tracking-tight text-white">{title}</h2>
  <div class="text-neutral">
    <slot />
  </div>
</section>