---
import type { TechStackItem } from "@types";

export interface Props {
  techStack: TechStackItem[];
}

const { techStack } = Astro.props;
---

<section id="techstack" class="py-12 bg-[#0f0f0f] text-gray-300">
  <h2 class="section-title text-white">⚙️ Tech Stack</h2>
  <div class="max-w-4xl mx-auto grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-8">
    {techStack.map(({ name }) => (
      <div class="flex items-center justify-center rounded-md bg-[#1a1a1a] border border-[#5755ff] px-4 py-3 text-white font-medium hover:bg-[#5755ff] hover:text-white transition-colors duration-200">
        {name}
      </div>
    ))}
  </div>
</section>
