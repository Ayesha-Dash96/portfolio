---
import Section from "./Section.astro";
import type { TechStackItem } from "@types";

export interface Props {
  techStack: TechStackItem[];
}

const { techStack } = Astro.props;
---

<Section title="⚙️ Tech Stack" href="techstack">
  <div class="max-w-4xl mx-auto grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-8">
    {techStack.map(({ name }) => (
      <div class="flex items-center justify-center rounded-md bg-black border border-primary px-4 py-3 text-white font-medium hover:bg-primary hover:text-white transition-colors duration-200">
        {name}
      </div>
    ))}
  </div>
</Section>